<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Edit "<%=campground.name%>" campground</h1>
        <div style="width:30%; margin:25px auto;">
            <form action="/campgrounds/<%=campground.id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="Name" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="Price" min="0.01" step="0.01" value="<%=campground.price%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="Image Url" value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" placeholder="description" value="<%=campground.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%=campground.id%>">Go back</a>
        </div>

    </div>
</div>
<% include ../partials/footer %>
