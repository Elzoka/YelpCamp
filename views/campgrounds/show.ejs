<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img src="<%=campground.image%>" class="img-responsive">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a href="#"><%=campground.name%></a></h4>
                    <p><%= campground.description %></p>
                    <p><em>Submitted By <%= campground.author.username %></em></p>
                    <%if(user && campground.author.id.equals(user._id)){%>
                    <a href="/campgrounds/<%= campground.id %>/edit" class="btn btn-xs btn-warning">Edit</a>
                    <form class="delete-form" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="post">
                        <button class="btn btn-xs btn-danger">Delete</button>
                    </form>
                    <%}%>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(comment => { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong>
                                <%= comment.author.username %>
                            </strong>
                            <span class="pull-right">10 days ago</span>
                            <p><%= comment.title %></p>
                            <% if(user && comment.author.id.equals(user.id)){%>
                                <a href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit" class="btn btn-xs btn-warning">
                                    Edit
                                </a>
                                <form class="delete-form" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="post">
                                    <button class="btn btn-xs btn-danger">Delete</button>
                                </form>
                            <%}%>
                        </div>
                    </div>
                    <hr>
                <% }); %>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>
